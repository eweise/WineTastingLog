# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login
GET     /rest/tastings              controllers.Rest.tastings
POST    /rest/uploadphoto           controllers.Rest.uploadphoto
POST    /rest/savetasting          controllers.Rest.saveTasting
POST    /rest/delete               controllers.Rest.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /tastings                   controllers.Tastings.tastings
POST    /tastings                  controllers.Tastings.save

# Delete a computer
GET    /tasting/:id/delete       controllers.Tastings.delete(id:Long)

# Authentication
POST    /login                              controllers.Application.authenticate
POST    /nativelogin                        controllers.Application.nativeAuthenticate
GET     /logout                             controllers.Application.logout

# Register
GET     /register                          controllers.Application.register
POST    /register                          controllers.Application.createUser
