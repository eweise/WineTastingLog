# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.login
GET     /rest/tastings/:token       controllers.Rest.tastings(token:String)
POST    /rest/uploadphoto           controllers.Rest.uploadphoto
GET     /rest/getimage              controllers.Rest.getimage
POST    /rest/savetasting           controllers.Rest.saveTasting
#POST    /rest/delete/:token         controllers.Rest.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET     /tastings                   controllers.Tastings.tastings
GET     /tasting/:id               controllers.EditTasting.edit(id:Long)
POST    /upload                     controllers.EditTasting.upload
GET     /tasting                   controllers.EditTasting.newTasting
POST    /tasting/:id               controllers.EditTasting.update(id:Long)
POST    /tasting                   controllers.EditTasting.saveNew

# Delete a computer
GET    /tasting/:id/delete       controllers.EditTasting.delete(id:Long)

# Authentication
POST    /login                              controllers.Application.authenticate
POST    /nativelogin                        controllers.Application.nativeAuthenticate
GET     /logout                             controllers.Application.logout

# Register
GET     /register                          controllers.Application.register
POST    /register                          controllers.Application.createUser
